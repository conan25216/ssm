<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC  "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.sample.ssm.common.dal.MenuFuncDao">

    <!-- ============================= INSERT ============================= -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO menu_func( id,menu_id,code,name,create_time,create_user,update_time )
        VALUES ( #{id},#{menuId},#{code},#{name},#{createTime},#{createUser},#{updateTime})
    </insert>

    <insert id="saveBatch">
        INSERT INTO menu_func( id,menu_id,code,name,create_time,create_user,update_time )
        VALUES 
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.id},#{item.menuId},#{item.code},#{item.name},#{item.createTime},#{item.createUser},#{item.updateTime} )
        </foreach>
    </insert>

    <!--
    <insert id="saveBatch">
        INSERT INTO menu_func( id,menu_id,code,name,create_time,create_user,update_time )
        <foreach collection="list" item="item" index="index" separator="UNION ALL">
            SELECT #{item.id},#{item.menuId},#{item.code},#{item.name},#{item.createTime},#{item.createUser},#{item.updateTime} 
              FROM DUAL 
        </foreach>
    </insert>

    -->

    <!-- ============================= UPDATE ============================= -->
    <update id="update">
        UPDATE menu_func
        <set>
            menu_id=#{menuId},
            code=#{code},
            name=#{name},
            create_time=#{createTime},
            create_user=#{createUser},
            update_time=#{updateTime},
        </set>
        WHERE id=#{id} 
    </update>

    <update id="updateIgnoreNull">
        UPDATE menu_func
        <set>
            <if test="menuId!= null">menu_id=#{menuId},</if>
            <if test="code!= null">code=#{code},</if>
            <if test="name!= null">name=#{name},</if>
            <if test="createTime!= null">create_time=#{createTime},</if>
            <if test="createUser!= null">create_user=#{createUser},</if>
            <if test="updateTime!= null">update_time=#{updateTime},</if>
        </set>
        WHERE id=#{id} 
    </update>

    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index"  separator=";">
            UPDATE menu_func
            <set>
                menu_id=#{item.menuId},
                code=#{item.code},
                name=#{item.name},
                create_time=#{item.createTime},
                create_user=#{item.createUser},
                update_time=#{item.updateTime},
            </set>
            WHERE id=#{item.id} 
        </foreach>
    </update>


    <!-- ============================= DELETE ============================= -->
    <delete id="delete">
        DELETE FROM menu_func
        WHERE id=#{id} 
    </delete>

    <delete id="deleteBatch">
        DELETE FROM menu_func
        WHERE
        <foreach collection="list" item="item" index="index" open="(" separator="OR" close=")">
            id=#{item.id} 
        </foreach>
    </delete>

    <delete id="deleteByPK">
        DELETE FROM menu_func
        WHERE id=#{id} 
    </delete>

    <delete id="deleteAll">
        DELETE FROM menu_func
    </delete>


    <!-- ============================= SELECT ============================= -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1) FROM menu_func
    </select>

    <select id="findByPK" resultType="MenuFunc">
        SELECT * FROM menu_func
        WHERE id=#{id} 
    </select>

    <select id="findByUK" resultType="MenuFunc">
        SELECT * FROM menu_func
        WHERE menu_id=#{menuId} and code=#{code}
    </select>

    <select id="find" resultType="MenuFunc">
        SELECT id,menu_id,code,name,create_time,create_user,update_time
         FROM menu_func
        <where>
            <if test="id!= null">
               AND id = #{id}
            </if>
            <if test="menuId!= null">
               AND menu_id = #{menuId}
            </if>
            <if test="code!= null">
               AND code = #{code}
            </if>
            <if test="name!= null">
               AND name = #{name}
            </if>
            <if test="createTime!= null">
               AND create_time = #{createTime}
            </if>
            <if test="createUser!= null">
               AND create_user = #{createUser}
            </if>
            <if test="updateTime!= null">
               AND update_time = #{updateTime}
            </if>
        </where>
    </select>

</mapper>
